.new
  %header
    %h1 Create Account
  =form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    =devise_error_messages!
    %article.inputs
      %section.userEmail
        = f.label :email
        = f.email_field :email, autofocus: true
        .break
      %section.userPassword
        = f.label :password
        = f.password_field :password, autocomplete: "off"
        .break
      %section.userConfirm
        = f.label :confirm_password
        = f.password_field :password_confirmation, autocomplete: "off"
        .break
      %section.submitBtn
        %button.trans_wht_btn
          = f.submit "Submit", {class: "btn_txt"}
      %section.stack
        = f.label :stack
        = f.text_f
    = f.hidden_field :role, value: params[:user_type]
    %section.submitOptions
      %p or sign up with another account:
      %section.links-wrapper
        =link_to "", user_omniauth_authorize_path(:linkedin), class: "linkedin"
        =link_to "", user_omniauth_authorize_path(:github), class: "github"